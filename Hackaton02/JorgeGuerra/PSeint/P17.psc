//una hora y nos calcule la hora dentro de un segundo.

Proceso Sumador_de_segundos
	hrs = 0
	min = 0
	se = 0
	add = 1
	Imprimir 'Ingresa la hora'
	Leer hrs
	Imprimir 'Ingresa los minutos'
	Leer min
	Imprimir 'Ingresa los segundos'
	Leer se
	
	Imprimir 'Ahora son las: ',hrs,'hrs:', min,'min:', se + add,'s'
	
FinProceso
